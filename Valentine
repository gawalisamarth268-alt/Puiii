<audio id="bgMusic" loop>
    <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" type="audio/mpeg">
</audio>

<h1>Purvai, will you be my Valentine? ðŸ’–</h1>

<div class="btn-container">
    <button id="yesBtn">Yes ðŸ’˜</button>
    <button id="noBtn">No ðŸ˜¢</button>
</div>

<div id="message"></div>

<script>
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const messageDiv = document.getElementById("message");
    const bgMusic = document.getElementById("bgMusic");

    const popSound = new Audio("https://www.soundjay.com/button/sounds/button-16.mp3");

    // Start music on first click anywhere (browser autoplay policy fix)
    document.body.addEventListener("click", () => {
        bgMusic.play();
    }, { once: true });

    noBtn.addEventListener("mouseover", () => {
        const container = document.querySelector(".btn-container");
        const maxX = container.clientWidth - noBtn.offsetWidth;
        const maxY = container.clientHeight - noBtn.offsetHeight;

        const randomX = Math.floor(Math.random() * maxX);
        const randomY = Math.floor(Math.random() * maxY);

        noBtn.style.left = randomX + "px";
        noBtn.style.top = randomY + "px";

        popSound.play();
    });

    yesBtn.addEventListener("click", () => {
        startHeartRain();
        messageDiv.innerHTML = "<div class='love-message'>Love you too, Pui ðŸ’–</div>";
    });

    function startHeartRain() {
        for (let i = 0; i < 80; i++) {
            const heart = document.createElement("div");
            heart.classList.add("heart");
            heart.innerHTML = "ðŸ’–";
            heart.style.left = Math.random() * 100 + "vw";
            heart.style.fontSize = (Math.random() * 25 + 15) + "px";
            heart.style.animationDuration = (Math.random() * 3 + 2) + "s";
            document.body.appendChild(heart);

            setTimeout(() => {
                heart.remove();
            }, 5000);
        }
    }
</script>

</body>
